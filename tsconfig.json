{
  "compilerOptions": {
    "target": "ES6", // Çıktıyı ES6'ya derle
    "module": "ES6", // ES6 modül sistemini kullan
    "outDir": "./dist", // Derlenmiş dosyaların çıktığı dizin
    "declaration": true, // .d.ts dosyalarını oluştur
    "declarationMap": true, // .d.ts.map dosyalarını oluştur
    "strict": true, // Katı tip kontrolü
    "esModuleInterop": true, // CommonJS modülleriyle uyum için
    "skipLibCheck": true, // Kütüphane dosyalarını kontrol etme
    "moduleResolution": "node", // Modülleri çözümleme yöntemi
    "resolveJsonModule": true, // JSON dosyalarını içeri aktarabilme
    "allowSyntheticDefaultImports": true, // Default import kullanımına izin ver
    "forceConsistentCasingInFileNames": true, // Dosya isimlerinin tutarlılığını zorla
    "isolatedModules": true, // Tek dosya modüller için hata kontrolü
    "jsx": "react" // React JSX desteği
  },
  "include": ["src"], // Derleme için kaynak kodu dizini
  "exclude": ["node_modules", "dist"] // Hariç tutulan dizinler
}
